<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddEventActivity">

    <EditText
        android:id="@+id/name"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:background="@drawable/edittext_background"
        android:ems="20"
        android:fontFamily="@font/montserrat"
        android:hint="Name"
        android:inputType="textPersonName"
        android:maxEms="20"
        android:padding="16dp"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />


    <Button
        android:id="@+id/start_date"
        android:layout_width="165dp"
        android:layout_height="55dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="17dp"
        android:background="@drawable/edittext_background"
        android:fontFamily="@font/montserrat"
        android:hint="Start Date"
        android:inputType="text"
        android:onClick="showDatePickerDialogStartDate"
        android:padding="15dp"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@+id/start_time"
        app:layout_constraintEnd_toStartOf="@+id/end_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name"
        app:layout_goneMarginLeft="4dp" />

    <Button
        android:id="@+id/end_date"
        android:layout_width="165dp"
        android:layout_height="55dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="17dp"
        android:background="@drawable/edittext_background"
        android:fontFamily="@font/montserrat"
        android:hint="End Date"
        android:inputType="text"
        android:onClick="showDatePickerDialogEndDate"
        android:padding="15dp"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@+id/end_time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/start_date"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <Button
        android:id="@+id/start_time"
        android:layout_width="165dp"
        android:layout_height="55dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/edittext_background"
        android:ems="20"
        android:fontFamily="@font/montserrat"
        android:hint="Start Time"
        android:inputType="textPersonName"
        android:maxEms="20"
        android:onClick="showTimePickerDialogStartDate"
        android:padding="16dp"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        app:layout_constraintEnd_toStartOf="@+id/end_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/start_date" />

    <Button
        android:id="@+id/end_time"
        android:layout_width="165dp"
        android:layout_height="55dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/edittext_background"
        android:fontFamily="@font/montserrat"
        android:hint="End Time"
        android:inputType="text"
        android:onClick="showTimePickerDialogEndDate"
        android:padding="16dp"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/start_time"
        app:layout_constraintTop_toBottomOf="@+id/end_date" />
</androidx.constraintlayout.widget.ConstraintLayout>